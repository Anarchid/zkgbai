<?xml version="1.0" encoding="UTF-8"?>
<project name="zkgbai" default="all">
  
  
  <property file="zkgbai.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.tox/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.ane"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.7" value="${jdk.home.1.7}/bin"/>
  <path id="jdk.classpath.1.7">
    <fileset dir="${jdk.home.1.7}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxrt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/ext/access-bridge-32.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.7}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.7}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.7"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module ZKGBAI -->
  
  <dirname property="module.zkgbai.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.zkgbai" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.zkgbai" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.zkgbai" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.zkgbai" value="-encoding windows-1252 -source 1.7 ${compiler.args}"/>
  
  <property name="zkgbai.output.dir" value="${module.zkgbai.basedir}/bin"/>
  <property name="zkgbai.testoutput.dir" value="${module.zkgbai.basedir}/bin"/>
  
  <path id="zkgbai.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="zkgbai.module.production.classpath">
    <path refid="${module.jdk.classpath.zkgbai}"/>
    <pathelement location="${basedir}/jlib/AIInterface.jar"/>
    <pathelement location="${basedir}/jlib/JavaOO-AIWrapper.jar"/>
    <pathelement location="${basedir}/jlib/SkirmishAI-src.jar"/>
    <pathelement location="${basedir}/jlib/vecmath-src.jar"/>
    <pathelement location="${basedir}/jlib/vecmath.jar"/>
    <pathelement location="${basedir}/jlib/quick-json-1.0.2.3.jar"/>
    <pathelement location="${basedir}/../../../../../lib/poly2tri-core-0.1.1-SNAPSHOT-javadoc.jar"/>
    <pathelement location="${basedir}/../../../../../lib/poly2tri-core-0.1.1-SNAPSHOT-sources.jar"/>
    <pathelement location="${basedir}/../../../../../lib/poly2tri-core-0.1.1-SNAPSHOT.jar"/>
    <pathelement location="${basedir}/jlib/slf4j-api-1.7.7.jar"/>
  </path>
  
  <path id="zkgbai.runtime.production.module.classpath">
    <pathelement location="${zkgbai.output.dir}"/>
    <pathelement location="${basedir}/jlib/AIInterface.jar"/>
    <pathelement location="${basedir}/jlib/JavaOO-AIWrapper.jar"/>
    <pathelement location="${basedir}/jlib/SkirmishAI-src.jar"/>
    <pathelement location="${basedir}/jlib/vecmath-src.jar"/>
    <pathelement location="${basedir}/jlib/vecmath.jar"/>
    <pathelement location="${basedir}/jlib/quick-json-1.0.2.3.jar"/>
    <pathelement location="${basedir}/../../../../../lib/poly2tri-core-0.1.1-SNAPSHOT-javadoc.jar"/>
    <pathelement location="${basedir}/../../../../../lib/poly2tri-core-0.1.1-SNAPSHOT-sources.jar"/>
    <pathelement location="${basedir}/../../../../../lib/poly2tri-core-0.1.1-SNAPSHOT.jar"/>
    <pathelement location="${basedir}/jlib/slf4j-api-1.7.7.jar"/>
  </path>
  
  <path id="zkgbai.module.classpath">
    <pathelement location="${zkgbai.output.dir}"/>
    <path refid="${module.jdk.classpath.zkgbai}"/>
    <pathelement location="${basedir}/jlib/AIInterface.jar"/>
    <pathelement location="${basedir}/jlib/JavaOO-AIWrapper.jar"/>
    <pathelement location="${basedir}/jlib/SkirmishAI-src.jar"/>
    <pathelement location="${basedir}/jlib/vecmath-src.jar"/>
    <pathelement location="${basedir}/jlib/vecmath.jar"/>
    <pathelement location="${basedir}/jlib/quick-json-1.0.2.3.jar"/>
    <pathelement location="${basedir}/../../../../../lib/poly2tri-core-0.1.1-SNAPSHOT-javadoc.jar"/>
    <pathelement location="${basedir}/../../../../../lib/poly2tri-core-0.1.1-SNAPSHOT-sources.jar"/>
    <pathelement location="${basedir}/../../../../../lib/poly2tri-core-0.1.1-SNAPSHOT.jar"/>
    <pathelement location="${basedir}/jlib/slf4j-api-1.7.7.jar"/>
  </path>
  
  <path id="zkgbai.runtime.module.classpath">
    <pathelement location="${zkgbai.output.dir}"/>
    <pathelement location="${basedir}/jlib/AIInterface.jar"/>
    <pathelement location="${basedir}/jlib/JavaOO-AIWrapper.jar"/>
    <pathelement location="${basedir}/jlib/SkirmishAI-src.jar"/>
    <pathelement location="${basedir}/jlib/vecmath-src.jar"/>
    <pathelement location="${basedir}/jlib/vecmath.jar"/>
    <pathelement location="${basedir}/jlib/quick-json-1.0.2.3.jar"/>
    <pathelement location="${basedir}/../../../../../lib/poly2tri-core-0.1.1-SNAPSHOT-javadoc.jar"/>
    <pathelement location="${basedir}/../../../../../lib/poly2tri-core-0.1.1-SNAPSHOT-sources.jar"/>
    <pathelement location="${basedir}/../../../../../lib/poly2tri-core-0.1.1-SNAPSHOT.jar"/>
    <pathelement location="${basedir}/jlib/slf4j-api-1.7.7.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.zkgbai">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.zkgbai">
    <patternset refid="excluded.from.module.zkgbai"/>
  </patternset>
  
  <path id="zkgbai.module.sourcepath">
    <dirset dir="${module.zkgbai.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.zkgbai" depends="compile.module.zkgbai.production,compile.module.zkgbai.tests" description="Compile module ZKGBAI"/>
  
  <target name="compile.module.zkgbai.production" depends="register.custom.compilers" description="Compile module ZKGBAI; production classes">
    <mkdir dir="${zkgbai.output.dir}"/>
    <javac2 destdir="${zkgbai.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.zkgbai}/javac">
      <compilerarg line="${compiler.args.zkgbai}"/>
      <bootclasspath refid="zkgbai.module.bootclasspath"/>
      <classpath refid="zkgbai.module.production.classpath"/>
      <src refid="zkgbai.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.zkgbai"/>
    </javac2>
    
    <copy todir="${zkgbai.output.dir}">
      <fileset dir="${module.zkgbai.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.zkgbai.tests" depends="register.custom.compilers,compile.module.zkgbai.production" description="compile module ZKGBAI; test classes" unless="skip.tests"/>
  
  <target name="clean.module.zkgbai" description="cleanup module">
    <delete dir="${zkgbai.output.dir}"/>
    <delete dir="${zkgbai.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.zkgbai" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.zkgbai" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>